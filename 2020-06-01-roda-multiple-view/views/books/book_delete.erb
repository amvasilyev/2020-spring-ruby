<div class="grid-x grid-margin-x">
  <div class="cell large-12 warning">
    Вы действительно хотите удалить книгу <%= @book.title %>?
  </div>
</div>

<% form({ method: :post },{ obj: @parameters }) do |f| %>
  <div class="grid-x grid-margin-x">
    <div class="large-12 cell">
      <%= f.input(:confirmation, type: :checkbox, label: 'Подтвержаю удаление') %>
    </div>
    <div class="large-12 cell">
      <%= f.button(value: 'Удалить', class: 'button warning') %>
      <a href="<%= path(@book) %>" class="button secondary">Отмена</a>
    </div>
  </div>
<% end %>
